{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["**/*", "!dist"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useConst": "warn"
      }
    }
  },
  "javascript": {
    "jsxRuntime": "transparent"
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
